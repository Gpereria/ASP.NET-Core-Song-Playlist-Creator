@model IEnumerable<MusicPlaylist.Models.Musica>
@using System;  
@using System.IO; 

<div class="container">
    <div class="w-100">

        <div class="w-100 adieu">
            <h2 class="gray-var text-center">Não Há Musicas em sua Playlist... </h2>
            <h2 class="gray-var text-center">
                Mas não fique triste...
            </h2>
            
            <h2 class="gray-var text-center">
                Preparei pra você uma lista especial...
            </h2>



            <div class="w-100 d-flex justify-content-center">
                <button  class="btn btn-outline-info btn-show-mercy">Mostre-me!</button>
            </div>
        </div>


        <div class="bonjour w-100">
        <table class="table table-bordered table-striped w100">
            <h2 class="gray-var text-center">Garanto que é a mais eclética que já vistes </h2>
                <thead class="table-dark">
                    <tr class="text-center">
                        <td>Id</td>
                        <td>Nome</td>
                        <td>Autor</td>
                        <td>Genero</td>
                        <td>Humor</td>
                        <td>#</td>
                    </tr>
                </thead>  
                    <tbody>
                        <tr>
                            @{
                                string[] lines = File.ReadAllLines(@"Views/Musicas/musicas.txt"); 
                                
                            }
                            @foreach (var linha in lines)
                            {
                                string[] valores = linha.Split(";"); 
                            <tr>
                            <td>@valores[0]</td>
                            <td>@valores[1]</td>
                            <td>@valores[2]</td>
                            <Td>@valores[3]</Td>
                            <td>@valores[4]</td>
                            <td class="text-center">
                                <div class="btn-group w-75" rol e="group">
                                    <a href="@valores[5]" target="blank" class="btn btn-danger">YOUTUBE</a>
                                </div>
                            </td>
                            </tr>
                            }
                        </tr>
                    </tbody>
            </table>
                <div class="w-100 d-flex justify-content-center">

                    <a asp-controller="Musicas" asp-action="Add" class="btn btn-success mx-3 goout"> Terminei, quero fazer a minha agora! </a>

                    <a asp-controller="Musicas" asp-action="Download" class="btn btn-warning mx-3 goout"> Quero Salvar no meu dispositivo! </a>

                </div>


            </div>
    </div>
     
</div>

<style>
button.btn,.goout{
    padding: 15px 37px;
    font-size: 30px;
    margin-top: 36px;
}

.bonjour {
    display: none;
}

.container{
    margin-bottom: 100px;
}

footer{
    display: none;
}
</style>


